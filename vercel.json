{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { 
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/slack/events",
      "methods": ["POST"],
      "dest": "/api/index.py"
    },
    {
      "src": "/api/health",
      "methods": ["GET"],
      "dest": "/api/index.py"
    },
    {
      "src": "/",
      "methods": ["GET"],
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ]
}